        @StaticAssets.RenderScript("Scripts/modernizr-2.6.2.js")
        @StaticAssets.RenderStyle("Content/bootstrap.css")
        @StaticAssets.RenderStyle("Content/site.css")
    }
    else
    {
        @StaticAssets.RenderStyle("bundles/main.css")
        @StaticAssets.RenderScript("bundles/modernizr.js")
    }




